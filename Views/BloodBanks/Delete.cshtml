@model DonorManagementAPI.Models.BloodBanks

<h2>Delete Subject</h2>

<h3>Are you sure you want to delete this subject?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Subject Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DOB
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Blood Type
        </dt>
        <dd class="col-sm-10">
            @Model.BloodType
        </dd>
        <dt class="col-sm-2">
            Quantity(ml)
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity_ml
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BloodBankID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
