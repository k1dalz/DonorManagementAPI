@model IEnumerable<DonorManagementAPI.Models.BloodBanks>

<h2>BloodBanks List</h2>
<table class="table">
    <thead>
        <tr>
            <th>BloodBank Name</th>
            <th>Date Of Birth</th>
            <th>Email</th>
            <th>Blood Type</th>
            <th>Quantity(ml)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bloodbanks in Model)
        {
            <tr>
                <td>@bloodbanks.Name</td>
                <td>@bloodbanks.DOB.ToShortDateString()</td>
                <td>@bloodbanks.Email</td>
                <td>@bloodbanks.BloodType</td>
                <td>@bloodbanks.Quantity_ml</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@bloodbanks.BloodBankID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@bloodbanks.BloodBankID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Add New BloodBank</a>

